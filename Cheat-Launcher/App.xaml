<Application x:Class="Cheat_Launcher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Cheat_Launcher"
             Startup="Application_Startup"
             >
    <Application.Resources>
        <FontFamily x:Key="InterFont">pack://application:,,,/Fonts/#Inter Thin</FontFamily>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource InterFont}" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style TargetType="Control">
            <Setter Property="FontFamily" Value="{StaticResource InterFont}" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Application.Resources>
</Application>
